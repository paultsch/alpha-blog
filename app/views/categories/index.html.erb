<h1 align="center">Listing all categories</h1>



<%= will_paginate %>

  <% @categories.each do |category| %>
      <div class="card" align="center" style="padding: 10px;">
        <h3 class="card-title">
          <%= link_to "#{category.name}", category_path(category) %>
        </h3>
      </div>
  <% end %>

<% will_paginate %>
