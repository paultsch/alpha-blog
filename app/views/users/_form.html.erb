<%= render 'shared/errors', obj: @user %>

<div class='row'>
  <div class='col-md-12'>

    <%= form_for @user do |f| %>
      <div class="form-group row">
        <label class="col-sm-2 col-form-label">
          <%= f.label :username%>
        </label>
        <div class="col-sm-8">
          <%= f.text_field :username, class: "form-control", placeholder: "Enter Username", autofocus: true %>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-2 col-form-label">
          <%= f.label :email %>
        </label>
        <div class="col-sm-8">
          <%= f.email_field :email, class: "form-control", placeholder: "Enter Email" %>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-2 col-form-label">
          <%= f.label :password %>
        </label>
        <div class="col-sm-8">
          <%= f.password_field :password, class: "form-control", placeholder: "Enter Password"%>
        </div>
      </div>
      <div class="form-group row">
        <div class="offset-sm-2 col-sm-10">
          <%= f.submit(@user.new_record? ? "Sign Up" : "Update Account", class:'btn btn-primary btn-lg') %>
        </div>
      </div>
      <div class="col-xs-4 col-xs-offset-4">
        [ <%= link_to "Cancel request and return to articles", articles_path %> ]
      </div>
    <% end %>

  </div>
</div>
