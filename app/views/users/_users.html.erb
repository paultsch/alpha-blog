<div class="row">
  <% @users.each do |user| %>
    <div class="card col-md-4">
        <%= gravatar_img_card(user) %>
      <div class="card-body">
        <div class="card-title">
          <h2><%= link_to user.username, user_path(user), class: "card-title" %></h2>
          <small><%= pluralize(user.articles.count, "article") if user.articles %></small>
          <% if logged_in? and current_user.admin? %>
            <div><%= link_to "Delete User", user_path(user), method: :delete,
              data: {confirm: "Arm you sure you want to delete the user and all of their articles?"},
              class: "btn btn-xs btn-danger" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
