<h1 align="center">Here are all of your articles</h1>
<p>
<%= link_to "Create new Article", new_article_path %>
</p>
<table>
<tr>
  <th>Title</th>
  <th>Description</th>
  <th>View</th>
  <th>Update</th>
</tr>
<tr>
<% @articles.each do |article|%>
  <tr>
    <td><%= article.title %></td>
    <td><%= article.description %></td>
    <td><%= link_to "View", article_path(article) %></td>
    <td><%= link_to "Edit", edit_article_path(article) %></td>
    <td><%= link_to "Delete", article_path(article), method: :delete, data: {confirm: "Arm you sure?"} %></td>
  </tr>
<% end %>
</table>
